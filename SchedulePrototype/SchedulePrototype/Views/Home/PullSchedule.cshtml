@model SchedulePrototype.Models.PullDetails
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PullSchedule</title>
</head>
<body>
    <div> 
        <h2>Enter the details of your Pull.</h2>
        @using(Html.BeginForm("PullSchedule", "Home", FormMethod.Post))
        {
            <p>
                <strong>Track location for the Pull</strong>
                @Html.TextBoxFor(m=>m.Track)
            </p>
            <p>
                <strong>Promoter Name</strong>
                @Html.TextAreaFor(m=>m.Promoter)
            </p>
            <p>
                <strong>Month/Day/Year</strong>
                <select name="month" class="form-control">
                    <option value="1">Jan</option>
                    <option value="2">Feb</option>
                    <option value="3">Mar</option>
                </select>
                <select name="day">
                    @for(int i = 1; i<32; i++)
                    {
                        <option>@i</option>
                    }
                </select>
                <input type="text" name="year" placeholder="year"/>
            </p>
            <input type="submit" placeholder="Submit your details" />
        }
    </div>
</body>
</html>
