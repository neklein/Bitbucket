@model SchedulePrototype.Models.TractorClassPickerViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TractorCheckBoxes</title>
</head>
<body>
    <div class="container">
        @using(Html.BeginForm("TractorCheckBoxes", "Home", FormMethod.Post))
        {
            for(int i = 0; i < Model.TClassCheckboxes.Count; i++)
            {
                <p>
                    @Html.CheckBoxFor(m=>m.TClassCheckboxes[i].IsSelected)
                    <span>@Model.TClassCheckboxes[i].TClass.TClassName</span>
                    @Html.HiddenFor(m=>m.TClassCheckboxes[i].TClass.TClassID)
                </p>
            }
            <input type="submit" value="Submit Class List"/>
        }
    </div>
</body>
</html>
