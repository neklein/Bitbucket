@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "AddCourse";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add Course</h3>
        @Html.ActionLink("Return to List", "Courses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m=>m.CourseId)
            if (ViewData.ModelState.IsValid)
            {
                <div name="opening" class="alert alert-info">Enter the course name:</div>
            }
            else
            {
                @Html.ValidationSummary();
            }
            <div class="form-group">
                @Html.LabelFor(m=>m.CourseName)
                @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control", placeholder = "Course" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.CourseName)</span>
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>

