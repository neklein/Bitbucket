@model TractorFanSite.Models.Tractor

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TractorDetails</title>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div> 
        <h2>These are the details for your Tractor!</h2>
        <table class="table table-hover">
            <tr>
                <td><strong>Tractor Name</strong></td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td><strong>Tractor Class</strong></td>
                <td>@Model.TractorClass</td>
            </tr>
            <tr>
                <td><strong>Tractor Driver</strong></td>
                <td>@Model.Driver</td>
            </tr>
        </table>
        @if(Model.TractorImage == "Start")
        {
            <img src="@Href("~/images/BigChiefStart.JPG")"/>

        }
        else if (Model.TractorImage == "Finish")
        {
            <img src="@Href("~/images/BigChiefFinish.JPG")" />

        }
        else
        {
            <span>Image cannot be found</span>
        }
    </div>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
